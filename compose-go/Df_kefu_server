FROM golang:1.18-alpine
MAINTAINER xiaojuezhi <"372019924@qq.com">

# 环境
ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64 \
    GOPROXY="https://goproxy.cn,direct"

# 代码目录
COPY ./kefu_server /usr/share/nginx/go/kefu_server
WORKDIR /usr/share/nginx/go/kefu_server

# 编译二进制文件
RUN go build -o bin/kefu_server ./cmd/main.go

# 声明服务端口
EXPOSE 8089

# 启动容器时运行的命令
RUN chmod +x /usr/share/nginx/go/kefu_server/bin/kefu_server
ENTRYPOINT ["./bin/kefu_server"]
